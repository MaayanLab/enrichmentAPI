FROM tomcat:9

ENV JAVA_OPTS="-Xmx16G -XX:PermSize=13G -XX:MaxPermSize=13G -XX:+UseCompressedOops"
ENV PREFIX="/enrichmentapi"
ENV OPENAPI_TITLE="Signature Commons Data API"
ENV OPENAPI_DESCRIPTION="An API for efficient data-level queries on the Signature Commons."
EXPOSE 8080

COPY docker/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

COPY docker/enrichmentapi.war /enrichmentapi.war

ENTRYPOINT [ "/entrypoint.sh" ]
CMD ["catalina.sh", "run"]
